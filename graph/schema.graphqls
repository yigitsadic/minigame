type Message {
  id: ID!
  text: String!
  messageType: MessageType!

  claimedNumber: Int
  prizeWon: Int
}

type Game {
  id: ID!
  currentPrize: Int!

  nextWinnerCheck: String!
  lastWinnerCheck: String!
  createdAt: String!
}

enum MessageType {
  INITIAL
  USER_JOINED
  WINNER_FOUND
  DOUBLE_PRIZE
  GAME_ENDED
}

type Query {
  currentGame: Game!
}

type Subscription {
  joinGame(gameId: String!, identifier: ID!): Message
}
